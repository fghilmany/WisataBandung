<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.ProfilFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
    >

        <com.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
        >
            <ImageView
                    android:id="@+id/iv_profil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@drawable/mountains"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_outline"
            />

        </com.github.florent37.shapeofview.shapes.CircleView>

        <TextView
                android:id="@+id/tv_profil_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Faris M Ghilmany"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:textSize="24sp"
                android:textColor="@color/text"

        />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textSize="18sp"
                    android:textColor="@color/text"
                    android:layout_gravity="center"
            />
            <TextView
                    android:id="@+id/tv_balance_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1000000"
                    android:textSize="20sp"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
            />
            <Button
                    android:id="@+id/btn_top_up"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Top Up"
                    android:background="@drawable/bg_button_green_primary"
                    android:textSize="16sp"
            />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#E9E9E9"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="16dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="16dp"
                  android:layout_marginBottom="16dp"
                  android:id="@+id/view1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="18sp"
                    android:textColor="@color/text"
                    android:layout_alignTop="@id/view1" android:layout_alignParentLeft="true"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

            <TextView
                    android:id="@+id/tv_username_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="MFghilmany"
                    android:textSize="18sp"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true" android:layout_alignTop="@id/view1"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"/>

            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#E9E9E9"
                  android:layout_marginTop="16dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="16dp"
                  android:layout_marginBottom="16dp"
                  android:id="@+id/view2" android:layout_below="@id/tv_username_profil"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="18sp"
                    android:textColor="@color/text"
                    android:layout_alignTop="@id/view2" android:layout_alignParentLeft="true"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

            <TextView
                    android:id="@+id/tv_email_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mfghilmany@xvalry.com"
                    android:textSize="18sp"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true" android:layout_alignTop="@id/view2"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"/>

            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#E9E9E9"
                  android:layout_marginTop="16dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="16dp"
                  android:layout_marginBottom="16dp"
                  android:layout_below="@id/tv_email_profil"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Log Out -"
                    android:textSize="18sp"
                    android:textColor="#3F51B5"

                    android:id="@+id/tv_logout" android:layout_alignParentBottom="true"
                    android:gravity="center"/>



        </RelativeLayout>



    </LinearLayout>

</FrameLayout>