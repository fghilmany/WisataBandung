<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/dialog_green_flat"
        android:orientation="vertical"
>
    <TextView
            android:background="#EDFFDA"
            android:text="Pesanan Kamu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"

            android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#E9E9E9"
          android:layout_margin="8dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/btn_cancel"
            android:padding="6dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Nama Pemesan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=":"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:id="@+id/tv_name_dialog"
                tools:text="Faris Ghilmany"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/btn_cancel"
            android:padding="6dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Tujuan Wisata"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=":"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:id="@+id/tv_destination_dialog"
                tools:text="Gunung Putri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/btn_cancel"
            android:padding="6dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Jumlah Tiket"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=":"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:id="@+id/tv_total_order"
                tools:text="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/btn_cancel"
            android:padding="6dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Tanggal Pemesanan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=":"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:id="@+id/tv_date_order"
                tools:text="11/01/2020"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/btn_cancel"
            android:padding="6dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Tanggal Kadaluarsa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=":"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:id="@+id/tv_expired"
                tools:text="06/02/2020"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/btn_cancel"
            android:padding="6dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Total"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=":"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
        />
        <TextView
                android:id="@+id/tv_total"
                tools:text="20000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#F70000"
                android:layout_weight="2"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#E9E9E9"
          android:layout_margin="8dp"
    />

    <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@drawable/btn_cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="8dp"
        />

        <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bayar"
                android:background="@drawable/btn_green_dark"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="8dp"
        />

    </LinearLayout>



</LinearLayout>