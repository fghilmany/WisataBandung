<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SuccessSignupActivity">

    <ImageView
            android:id="@+id/iv_hai"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/hai"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"/>

    <TextView
            android:id="@+id/tv_hai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Sukses"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/iv_hai" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:id="@+id/tv_hai2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wilujeung Sumping"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_hai" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <ProgressBar
            android:id="@+id/progress_bar_hai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress2"
            android:visibility="visible"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tv_hai2"
            android:layout_marginTop="72dp" app:layout_constraintHorizontal_bias="0.487"/>

</android.support.constraint.ConstraintLayout>