<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_destination_poster"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    tools:src="@drawable/mountains"
                    android:scaleType="centerCrop" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_alignWithParentIfMissing="false"
                    android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>

            <TextView
                    android:id="@+id/tv_name_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Gunung Putri Lembang"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text" android:layout_toRightOf="@id/iv_destination_poster"
                    android:paddingStart="8dp" android:paddingLeft="8dp" android:paddingTop="8dp"
                    android:paddingEnd="8dp" android:paddingRight="8dp" android:paddingBottom="0dp"/>

            <TextView
                    android:id="@+id/tv_address_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="11sp"
                    tools:text="Jl. Gunung Putri Lembang, Kabupaten Bandung Barat, Jawa Barat 40391"
                    android:layout_toRightOf="@id/iv_destination_poster"
                    android:layout_below="@id/tv_name_destination"
                    android:paddingTop="0dp" android:paddingStart="8dp"
                    android:paddingLeft="8dp" android:paddingEnd="8dp"
                    android:paddingRight="8dp"/>

            <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga : Rp. "
                    android:textSize="10sp"
                    android:textColor="@color/text"
                    android:layout_toEndOf="@id/iv_destination_poster" android:layout_alignWithParentIfMissing="false"
                    android:layout_alignParentBottom="true" android:paddingLeft="8dp" android:paddingBottom="12dp"/>

            <TextView
                    android:id="@+id/tv_destination_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="15000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F70000"
                    android:layout_toEndOf="@id/textview" android:layout_alignParentBottom="true"
                    android:paddingBottom="12dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>